{
  "manifest_version": 3,
  "description": "Extracts all links from the current page and displays them in a popup.",
  "name": "Link Extractor",
  "version": "1.0",
  "icons": {
    "128": "icons/128.png",
    "256": "icons/256.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "64": "icons/64.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "scripts/background.js"
  }
}
