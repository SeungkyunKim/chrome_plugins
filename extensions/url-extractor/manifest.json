{
  "manifest_version": 3,
  "name": "My Link Extractor",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "offscreen": {
    "reasons": ["DOM_PARSER"],
    "justification": "Parse HTML content to extract links.",
    "document_url": "offscreen.html"
  }
}